{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:vue/vue3-recommended",
        "standard"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "vue"
    ],
    "overrides": [
        {
            "files": [
                "pages/**/*.vue",
                "layouts/**/*.vue"
            ],
            "rules": {
                "vue/multi-word-component-names": 0
            }
        }
    ],
    "rules": {
        "indent": [
            "error",
            4
        ],
        "vue/html-indent": [
            "error",
            4
        ],
        "no-undef": "off",
        "vue/custom-event-name-casing": [
            "error",
            "camelCase",
            {
                "ignores": []
            }
        ]
    }
}